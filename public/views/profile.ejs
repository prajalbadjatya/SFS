<%- include ("partials/header") %>


<div class="mainContainer3">
    <nav class="navbar navbar-light bg-light loginNavbar">
        <a class="navbar-brand navTop">
            <img src="images/logo1.png" class="navLogo d-inline-block align-top" alt="">
            <span class="navbarTitle">Feedback System</span>
        </a>
    </nav>
    
  

    <div class = "errors">
       

        <% if(success_msg.length !=0 ){ %>
            <div class="animated fadeOut message">
                <% console.log(success_msg); %>
                <%= success_msg %>
            </div>
        <% } %>

        <% if(error_msg.length!=0){ %>
            <div class="animated fadeOut message">
                <%= error_msg[0] %>
                <% console.log(error_msg); %>
            </div>
        <% } %>

        <% if(error.length!=0){ %>
            <div class="animated fadeOut message">
                <%= error %>
                <% console.log(error); %>
            </div>
        <% } %>

    </div>

    <div class="profileContainer">
        <form action="/postUserRegister" method="post">
            <span class="loginHeading">Student Feedback System Registration Form</span>
            
            <div class="form-group emailForm">
               <label for="exampleInputEmail1" class="label">Email address</label>
               <input type="email" class="form-control" id="exampleInputEmail1" name="email" value="<%=email%>" aria-describedby="emailHelp" placeholder="Enter email" readonly>
            </div>
            <div class="form-group">
               <label for="exampleInputUsername" class="label">Year</label>
               <input type="text" class="form-control" id="exampleInputUsername" name="username" placeholder="Enter Year of study">
            </div>
            <div class="form-group">
               <label for="exampleInputRollno" class="label">Roll No.</label>
               <input type="text" class="form-control" id="exampleInputRollno" name="rollno" placeholder="Enter Roll No.">
            </div>
            <div class="form-group">
               <label for="exampleInputBranch" class="label">Branch</label>
               <input type="text" class="form-control" id="exampleInputBranch" name="branch" placeholder="Enter Branch">
            </div>
            <button type="submit" id="SubmitBtn" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>